<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!--对象的别名配置  author:wangchen.gpx  since：15/7/11-->
    <typeAliases>
        <typeAlias alias="Student" type="com.mybatis3.domain.Student"></typeAlias>
    </typeAliases>

    <!--数据库连接的配置  author:wangchen.gpx  since：15/7/11-->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"></transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"></property>
                <property name="url" value="jdbc:mysql://10.101.175.55:3316/prm"></property>
                <property name="username" value="prm"></property>
                <property name="password" value="prm"></property>
            </dataSource>
        </environment>
    </environments>


    <mappers>
        <mapper resource="com/mybatis2/mappers/StudentMapper.xml"></mapper>
    </mappers>
</configuration>